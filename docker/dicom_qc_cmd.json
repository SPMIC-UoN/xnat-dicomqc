{
    "name": "dicomqc", 
    "description": "Runs simple DICOM tag based QC on an MRI",
    "info-url": "", 
    "label": "dicomqc",
    "image": "martincraig/xnat-dicomqc", 
    "version": "0.0.1", 
    "schema-version": "1.0", 
    "type": "docker", 
    "command-line": "python dicom_qc.py --input /input --session #SESSION_ID# #DEBUG#",
    "inputs": [
        {
            "name": "session-id",
            "description": "",
            "type": "string",
            "required": true,
            "replacement-key": "#SESSION_ID#"
        },
        {
            "name": "debug",
            "description": "Enable debug mode",
            "type": "boolean",
            "required": false,
	    "default-value": false,
            "replacement-key": "#DEBUG#",
	    "true-value": "--debug",
	    "false-value": ""
        }
    ],
    "outputs": [
    ],
    "mounts": [
        {
            "writable": "false", 
            "path": "/input", 
            "name": "dicom-in"
        }
    ], 
    "xnat": [
        {
            "name": "dicomqc",
            "contexts": ["xnat:imageSessionData"],
            "description": "Run DICOM tag QC on a session", 
            "label": "dicomqc", 
            "external-inputs": [
                {
                    "name": "session", 
                    "type": "Session", 
                    "required": true, 
                    "description": "Input session",
                    "provides-files-for-command-mount": "dicom-in",
                    "load-children" : true
                }
            ],
            "derived-inputs": [
                {
                    "name": "session-id",
                    "type": "string",
                    "required": true,
                    "load-children": true,
                    "derived-from-wrapper-input": "session",
                    "derived-from-xnat-object-property": "id",
                    "provides-value-for-command-input": "session-id"
                }
            ],
            "output-handlers": [
            ]
        }
    ]
}

