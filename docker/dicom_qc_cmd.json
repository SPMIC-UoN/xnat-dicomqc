{
    "name": "dicomqc", 
    "description": "Runs simple DICOM tag based QC on an MRI",
    "info-url": "", 
    "label": "dicomqc",
    "image": "martincraig/xnat-dicomqc", 
    "version": "0.0.1", 
    "schema-version": "1.0", 
    "type": "docker", 
    "command-line": "python dicom_qc.py /input",
    "inputs": [
    ],
    "outputs": [
    ],
    "mounts": [
        {
            "writable": "false", 
            "path": "/input", 
            "name": "dicom-in"
        }
    ], 
    "xnat": [
        {
            "name": "dicomqc",
            "contexts": ["xnat:imageScanData"],
            "description": "Run DICOM tag QC on a session", 
            "label": "dicomqc", 
            "external-inputs": [
                {
                    "name": "scan", 
                    "type": "Scan", 
                    "required": true, 
                    "description": "Input scan"
                }
            ],
            "derived-inputs": [
                {
                    "name": "scan-dicoms",
                    "type": "Resource",
                    "derived-from-wrapper-input": "scan", 
                    "matcher": "@.label == 'DICOM'", 
                    "provides-files-for-command-mount": "dicom-in", 
                    "description": "The DICOM resource on the scan"
                }
            ], 
            "output-handlers": [
            ]
        }
    ]
}

